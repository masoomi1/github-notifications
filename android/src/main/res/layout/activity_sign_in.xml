<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sign_in_layout"
    tools:context="io.alvaroorduna.githubnotifications.SignInActivity">

    <TextView
        android:id="@+id/sign_in_banner"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:padding="24dp"
        android:text="@string/sign_in_banner"
        android:textSize="26sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_above="@id/sign_in_banner"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/sign_in_img_desc"
        android:src="@mipmap/ic_launcher" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/sign_in_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_banner"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_in_button" />

</RelativeLayout>